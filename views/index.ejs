<!DOCTYPE html>
<html lang="en" ng-app="app.todos">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <!-- cdn style -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/angular-xeditable/0.8.1/css/xeditable.min.css">
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.6.7/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-xeditable/0.8.1/js/xeditable.min.js"></script>
    <script src="assets/js/main/app.js"></script>
    <script src="assets/js/main/services/svTodo.js"></script>
    <link rel="stylesheet" href="assets/css/style.css">
    <title>ANGULAR TO DO LIST</title>
</head>
<body ng-controller="todoController">
    <div class="container">
             
        <div class="jumbotron text-center">         
                <h1>{{ appName }}
                    <span class="badge badge-info">{{todos.length}}</span>    
                </h1>             
        </div>
        <div class="row" id="todo-list">
            <div class="col-sm-12">
                <div class="checkbox" ng-repeat="todo in todos">
                    
                    <input type="checkbox" ng-model="todo.isDone" ng-change="updateTodo(todo)">
                    <a href="" ng-click="deleteTodo(todo)"><i class="fa fa-remove"></i></a>
                    <a href="" ng-click="textBtnForm.$show()" ng-hide="textBtnForm.$visible"><i class="fa fa-edit"></i></a>
                    <span ng-class="{strike: todo.isDone}" editable-text="todo.text" e-form="textBtnForm" onaftersave="updateTodo(todo)" > {{todo.text}}</span>
                </div>
                <p class="text-center" ng-show="loading">
                    <span class="fa fa-spinner fa-spin fa-3x"></span>
                </p>
            </div>
        </div>
        <div class="row" id="todo-form">
            <div class="col-sm-12 text-center">
                <form >
                    <div class="form-group">
                        <input type="text" ng-model="formData.text" class="form-control input-lg text-center" placeholder="Nhập vào">
                    </div>
                    <button type="submit" ng-click="createTodo()" class="btn btn-info" 
                    ng-disabled="!formData.text"
                    >ADD</button>
                </form>
            </div>
        </div>
        
    </div>
    
</body>
</html>